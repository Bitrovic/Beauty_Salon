@model List<Treatment>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Lista tretmana</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Treatment" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  Kreirajte novi tretman
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Slika tretmana
                    </th>
                    <th>
                        Naziv tretmana
                    </th>
                    <th>
                        Opis tretmana
                    </th>
                        <th>
                        Cena tretmana
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var treatment in Model)
                {
                    <tr>
                        <td><img src="@treatment.Image" style="width:100px;" /></td>
                        <td>@treatment.Name</td>
                        <td>@treatment.Description</td>
                        <td>@treatment.Price din</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Treatment" asp-action="Edit" asp-route-id="@treatment.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Ažurirajte
                                </a>
                                <a asp-controller="Treatment" asp-action="Delete" asp-route-id="@treatment.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Obrišite
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

