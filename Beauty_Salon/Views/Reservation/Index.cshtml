@model List<Reservation>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Lista rezervacija</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
      @*  <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Treatment" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  Kreiraj novi tretman
                </a>
            </div>
        </div>*@

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Šifra rezervacije
                    </th>
                    <th>
                        Ime i prezime korisnika
                    </th>
                    <th>
                        Datum rezervacije
                    </th>
                    <th>
                        Vreme rezervacije
                    </th>
                    <th>
                        Status rezervacije
                    </th>
                    <th>Operacije</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var reservation in Model)
                {
                    <tr>
                        <td>@reservation.Id</td>
                        <td>@reservation.User?.Name @reservation.User?.Surname</td>
                        <td>@reservation.ReservationDate?.ToString("dd/M/yyyy")</td>
                        <td>@(@reservation.ReservationTerm?.StartHour < 10 ? "0" + @reservation.ReservationTerm?.StartHour : @reservation.ReservationTerm?.StartHour):00 - @(@reservation.ReservationTerm?.EndHour < 10 ? "0" + @reservation.ReservationTerm?.EndHour : @reservation.ReservationTerm?.EndHour):00</td>
                        <td>@reservation.Status</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Treatment" asp-action="Edit" asp-route-id="@reservation.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Treatment" asp-action="Delete" asp-route-id="@reservation.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                                <a asp-controller="Treatment" asp-action="Delete" asp-route-id="@reservation.Id" class="btn btn-warning mx-2">
                                    <i class="bi bi-check-circle"></i> Realise
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

